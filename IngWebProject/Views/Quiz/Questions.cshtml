@using IngWebProject.Scripts
@model IngWebProject.Models.Option

@{
    ViewBag.Title = "Questions";
}

<h2>Quiz Difficulty: @Utility.quizDiff</h2>
@if (Utility.quizDiff.Equals("Auto")) { 
    <h2>Current Auto difficutly: @Utility.autoDiff</h2>
}
@using (Html.BeginForm("NextQuestion", "Quiz", FormMethod.Get))
{
    <br />
    <br />
    <h4>Question n°@(Utility.nQues+1)</h4>
    @Html.DisplayFor(model => model.Question.QuestionText);
    <br />
    <br />
    @Html.DropDownList("OptionsID", null, htmlAttributes: new { @class = "form-control" })
    <br />
    <input type="submit" id="FilterOptions" value="Siguiente" />
}
